<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity"
    android:background="#F8F5E6">

    <ImageView
        android:id="@+id/botonatres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/atras"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="36dp" />

    <ImageView
        android:id="@+id/iconoperfil"
        android:layout_width="130dp"
        android:layout_height="122dp"
        android:src="@drawable/perfil2"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="68dp" />

    <TextView
        android:id="@+id/infonombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:theme="@style/TextViewSubTitulos"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="224dp" />

    <TextView
        android:id="@+id/infoapellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:theme="@style/TextViewSubTitulos"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="294dp" />

    <TextView
        android:id="@+id/infotarjetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/infotarjetas"
        android:theme="@style/TextViewSubTitulos"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="364dp" />

    <TextView
        android:id="@+id/numerotarjeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:theme="@style/TextViewSubTitulos"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="440dp" />

    <TextView
        android:id="@+id/fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/infofavoritos"
        android:theme="@style/TextViewSubTitulos"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="504dp" />

    <Button
        android:id="@+id/cerrarsesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="578dp" />


</androidx.constraintlayout.widget.ConstraintLayout>