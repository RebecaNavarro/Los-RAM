<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/perla"
    android:gravity="center_horizontal"
    >

    <View
        android:id="@+id/fondo_lista"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"></View>

            <ImageView
            android:id="@+id/imagen_de_lista"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/fondo_lista"
                app:layout_constraintTop_toTopOf="@+id/fondo_lista"
                android:layout_margin="16dp"/>

            <TextView
                android:layout_width="190dp"
                android:layout_height="32dp"
                android:id="@+id/nombre_prenda_lista"
                android:text="Nombre prenda"
                android:theme="@style/TextViewSubTitulos"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintLeft_toRightOf="@+id/imagen_de_lista"
                app:layout_constraintTop_toTopOf="@+id/fondo_lista"
            />

            <TextView
                android:layout_width="190dp"
                android:layout_height="32dp"
                android:text="Precio"
                android:id="@+id/precio_lista"
                android:theme="@style/TextViewTextoNormal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintLeft_toRightOf="@+id/imagen_de_lista"
                app:layout_constraintTop_toBottomOf="@+id/nombre_prenda_lista"
            />

            <TextView
                android:layout_width="190dp"
                android:layout_height="32dp"
                android:text="Disponible"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:theme="@style/TextViewTextoNormal"
                app:layout_constraintLeft_toRightOf="@+id/imagen_de_lista"
                app:layout_constraintTop_toBottomOf="@+id/precio_lista"
            />


</androidx.constraintlayout.widget.ConstraintLayout>