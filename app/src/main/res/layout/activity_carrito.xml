<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/perla"
    tools:context=".CarritoActivity">

    <ImageView
        android:id="@+id/botonatras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/atras"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/titulo_tupedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tupedido"
        android:theme="@style/TextViewTitulos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        android:paddingBottom="50dp"
        />

    <!--    <TextView-->
    <!--        android:id="@+id/descripcion_carrito"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="@string/descripcion"-->
    <!--        android:theme="@style/TextViewSubTitulos"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/titulo_tupedido"-->
    <!--        app:layout_constraintLeft_toLeftOf="parent"-->
    <!--        android:layout_marginLeft="20dp"-->
    <!--        android:layout_marginTop="20dp"-->
    <!--        />-->

    <LinearLayout
        android:id="@+id/detalle"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toBottomOf="@id/titulo_tupedido"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/prenda_subtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/prenda"
                android:layout_gravity="center"
                android:theme="@style/TextViewSubTitulos"
                />

            <TextView
                android:id="@+id/prenda_desc"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:text=""
                android:textSize="24dp"
                android:theme="@style/TextViewTextoNormal"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/sub_cantidad_prenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_weight="1"
                android:text="@string/cantidad"
                android:theme="@style/TextViewSubTitulos"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="4">

                <ImageButton
                    android:id="@+id/basurero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete"
                    android:backgroundTint="@color/perla"/>

                <ImageView
                    android:id="@+id/menos"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/menosuno"
                    android:backgroundTint="@color/perla"/>

                <TextView
                    android:id="@+id/prenda_cant"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="24dp"
                    android:layout_marginTop="4dp"
                    android:textAlignment="center"
                    />

                <ImageButton
                    android:id="@+id/mas"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/menosuno"
                    android:backgroundTint="@color/perla"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detalle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="24dp"
        android:theme="@style/TextViewSubTitulos"
        android:text="@string/descripcion"
        />

    <LinearLayout
        android:id="@+id/resumen"
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/detalle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/detalles"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/detalles"
                android:theme="@style/TextViewSubTitulos"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/comision"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/por_servicio"
                android:textSize="24dp"
                android:theme="@style/TextViewTextoNormal"
                />

            <TextView
                android:id="@+id/total_de_la_cantidad"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/por_servicio"
                android:textSize="24dp"
                android:theme="@style/TextViewTextoNormal"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/sub_total"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="56dp"
                android:layout_weight="1"
                android:text="@string/total_a_pagar"
                android:theme="@style/TextViewSubTitulos"
                />

            <TextView
                android:id="@+id/total_pagar_comision_bs"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/comision"
                android:textSize="24dp"
                android:layout_gravity="center"
                android:theme="@style/TextViewTextoNormal"
                />

            <TextView
                android:id="@+id/total_pagar_bs"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/comision"
                android:textSize="24dp"
                android:layout_gravity="center"
                android:theme="@style/TextViewTextoNormal"
                />


        </LinearLayout>




    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
>   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/En_bs"
        app:layout_constraintBottom_toTopOf="@+id/TextViewTotalCarrito"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="En Bs:"
        android:theme="@style/TextViewSubTitulos"
        android:layout_marginLeft="24dp"
        ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TextViewTotalCarrito"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Total Compra"
            android:theme="@style/TextViewTextoNormal"
            android:layout_margin="24dp"
            ></TextView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="24dp"
            android:theme="@style/BotonesFuncionales"
            android:text="Ir a Pagar">
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>