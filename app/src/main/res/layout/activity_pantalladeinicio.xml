<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantalladeinicio"
    android:background="#F8F5E6"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/averiaseriflibre_bold"
        android:text="SuperChero"
        android:textColor="#000000"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="118dp"></TextView>

    <EditText
        android:id="@+id/textocorreootelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Correo o Telefono"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="210dp" />

    <EditText
        android:id="@+id/contrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="contraseña"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="274dp" />

    <Button
        android:id="@+id/botondeinicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="358dp" />

    <TextView
        android:id="@+id/olvidemicontraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="olvidate tu contraseña?"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="444dp" />

    <TextView
        android:id="@+id/o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-----------------o-----------------"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="488dp" />

    <TextView
        android:id="@+id/crearcuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Cuenta"
        android:textColor="#000000"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="550dp" />

</androidx.constraintlayout.widget.ConstraintLayout>