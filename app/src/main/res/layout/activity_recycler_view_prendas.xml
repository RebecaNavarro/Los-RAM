<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecyclerViewPrendasActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/fondo_boton_prendas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </View>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVerCarro"
        android:text="AÃ±adir a carrito"
        android:theme="@style/BotonesFuncionales"
        app:layout_constraintTop_toTopOf="@+id/fondo_boton_prendas"
        app:layout_constraintBottom_toBottomOf="@id/fondo_boton_prendas"
        app:layout_constraintLeft_toLeftOf="@id/fondo_boton_prendas"
        app:layout_constraintRight_toRightOf="@id/fondo_boton_prendas"
        android:padding="16dp"></Button>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fondo_boton_prendas"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/recycler_prendas">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>