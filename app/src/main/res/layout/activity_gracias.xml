<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/perla"
    tools:context=".GraciasActivity">

    <TextView
        android:id="@+id/llego"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/llego"
        android:textAlignment="center"
        android:theme="@style/TextViewSubTitulos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gracias"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="24dp"
    />

    <TextView
        android:id="@+id/gracias"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/gracias"
        android:textAlignment="center"
        android:theme="@style/TextViewTitulos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/bolsas_de_tienda"
        app:layout_constraintTop_toBottomOf="@id/gracias"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="32dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>